{
  "manifest_version": 3,
  "name": "eBay to Google Sheets Exporter",
  "version": "1.3",
  "description": "Export order info from eBay order pages to Google Sheets.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.ebay.com/mesh/ord/details*"],
      "js": ["content.js"]
    }
  ]
}